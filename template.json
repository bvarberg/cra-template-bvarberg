{
  "package": {
    "dependencies": {
      "@types/node": "^12.0.0",
      "@types/react": "^17.0.0",
      "@types/react-dom": "^17.0.0",
      "@types/jest": "^26.0.15",
      "babel-loader": "8.1.0",
      "typescript": "^4.1.2",
      "web-vitals": "^1.0.1"
    },
    "devDependencies": {
      "@storybook/addon-essentials": "^6.1.11",
      "@storybook/addon-centered": "^5.3.21",
      "@storybook/node-logger": "^6.1.11",
      "@storybook/preset-create-react-app": "^3.1.5",
      "@storybook/react": "^6.1.11",
      "@testing-library/cypress": "^7.0.3",
      "@testing-library/jest-dom": "^5.11.4",
      "@testing-library/react": "^11.1.0",
      "@testing-library/user-event": "^12.1.10",
      "cypress": "^6.2.1",
      "dependency-cruiser": "^9.24.0",
      "eslint-config-prettier": "^8.0.0",
      "eslint-plugin-cypress": "^2.11.2",
      "eslint-plugin-jest-dom": "^3.6.4",
      "fishery": "^1.2.0",
      "hygen": "^6.0.4",
      "prettier": "^2.2.1"
    },
    "scripts": {
      "cypress:open": "cypress open",
      "cypress:run": "cypress run",
      "deps:check": "depcruise --config .depcruise/config.js --output-type err src",
      "deps:graph": "depcruise --config .depcruise/config.js --output-type dot src | dot -T svg > deps.svg",
      "deps:report": "depcruise --config .depcruise/config.js --output-type err-html --output-to deps.html src",
      "fmt": "prettier --write .",
      "fmt:check": "prettier --check .",
      "lint": "eslint src --ext=ts,tsx",
      "lint:fix": "npm run lint -- --fix",
      "new:component": "hygen component new",
      "new:factory": "hygen factory new",
      "storybook": "start-storybook -p 6006 -s public"
    },
    "eslintConfig": {
      "extends": [
        "react-app",
        "react-app/jest",
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended",
        "plugin:cypress/recommended",
        "prettier"
      ],
      "env": {
        "cypress/globals": true
      },
      "rules": {
        "sort-imports": [
          "error",
          {
            "ignoreDeclarationSort": true
          }
        ],
        "@typescript-eslint/member-ordering": [
          "error",
          {
            "default": {
              "order": "alphabetically"
            }
          }
        ],
        "@typescript-eslint/consistent-type-definitions": [
          "error",
          "interface"
        ],
        "import/export": "error",
        "import/order": [
          "error",
          {
            "newlines-between": "never",
            "alphabetize": {
              "order": "asc"
            }
          }
        ],
        "import/newline-after-import": "error",
        "import/no-duplicates": "error",
        "import/no-useless-path-segments": "error",
        "react/jsx-sort-props": [
          "error",
          {
            "callbacksLast": true,
            "shorthandFirst": true,
            "reservedFirst": true
          }
        ],
        "testing-library/no-render-in-setup": "error",
        "testing-library/prefer-screen-queries": "warn",
        "testing-library/prefer-wait-for": "error"
      },
      "overrides": [
        {
          "files": ["**/*.stories.tsx"],
          "rules": {
            "import/no-anonymous-default-export": "off"
          }
        }
      ]
    }
  }
}
